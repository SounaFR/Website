<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/c08589246e.js" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="/node/main.css">
    </head>
    <body>
        <div class="container-md">
            <div class="col-md-5" id="input">
                <h1><i class="fas fa-sign-in-alt"></i> Login</h1>
                <br>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/node/login" method="post">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required="true">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-success">Login</button>
                </form>
                <hr>
                <strong><p>Need an account ? <a href="/node/signup"> Signup</a></p></strong>
                <strong><p>Or go <a href="/node">home</a>.</p></strong>
            </div>
        </div>
    </body>
</html>