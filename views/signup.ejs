<!doctype html>
<html lang="en">
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Signup</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/c08589246e.js" crossorigin="anonymous"></script>
        
        <link rel="stylesheet" href="main.css">
    </head>
    <body>
        <div class="container-md">
            <div class="col-sm-5" id="input">
                <h1><i class="fas fa-sign-in-alt"></i> Signup</h1>
                <br>
                
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/signup" method="post">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                        <label for="floatingInput">Email address</label>
                      </div>
                      <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required="true">
                        <label for="floatingPassword">Password</label>
                      </div>
                    <br>
                    <button type="submit" class="btn btn-success">Signup</button>
                </form>
                <hr>
                <strong><p>Already have an account? <a href="/login">Login</a></p></strong>
                <strong><p>Or go <a href="/">home</a>.</p></strong>
            </div>
        </div>
    </body>
</html>